{
  "name": "prompthub",
  "version": "0.2.3",
  "description": "一款开源、本地优先的 AI Prompt 管理工具，帮助你高效管理、版本控制和复用",
  "main": "out/main/index.js",
  "author": {
    "name": "legeling",
    "email": "legeling567@gmail.com",
    "url": "https://github.com/legeling"
  },
  "license": "AGPL-3.0",
  "packageManager": "pnpm@9.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/legeling/PromptHub.git"
  },
  "scripts": {
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dev": "vite",
    "dev:web": "vite --config vite.web.config.ts",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:mac": "vite build && electron-builder --mac --x64 --arm64 --publish never",
    "electron:build:win": "vite build && electron-builder --win --x64 --arm64 --publish never",
    "electron:build:linux": "vite build && electron-builder --linux --x64 --publish never",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "better-sqlite3": "^12.5.0",
    "electron-updater": "^6.6.2",
    "i18next": "^24.0.0",
    "react-i18next": "^15.0.0",
    "react-markdown": "^9.0.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-highlight": "^6.0.0",
    "hast-util-sanitize": "^5.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "concurrently": "^9.0.0",
    "electron": "33",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "lucide-react": "^0.460.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.0.0",
    "wait-on": "^8.0.0"
  }
}
